<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_dark"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_title"
        android:text="@string/app_name"
        android:textStyle="italic"
        android:textSize="@android:dimen/notification_large_icon_width"
        android:textColor="@color/secondary_text_disabled_material_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button android:text="@string/p1vsp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_p1_vs_p2"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_stats"
        android:layout_toStartOf="@+id/button_stats"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p1vsai"
        android:id="@+id/button_p1_vs_ai"
        android:layout_below="@+id/button_p1_vs_p2"
        android:layout_alignLeft="@+id/button_p1_vs_p2"
        android:layout_alignStart="@+id/button_p1_vs_p2"
        android:layout_alignRight="@+id/button_p1_vs_p2"
        android:layout_alignEnd="@+id/button_p1_vs_p2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics"
        android:id="@+id/button_stats"
        android:layout_marginRight="124dp"
        android:layout_marginEnd="124dp"
        android:layout_alignTop="@+id/button_p1_vs_p2"
        android:layout_alignRight="@+id/main_title"
        android:layout_alignEnd="@+id/main_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_rules"
        android:id="@+id/button_rules"
        android:layout_below="@+id/button_stats"
        android:layout_alignLeft="@+id/button_stats"
        android:layout_alignBottom="@+id/button_p1_vs_ai" />



</RelativeLayout>
