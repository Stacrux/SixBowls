<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/background_material_dark">

    <TextView
        android:id="@+id/records_title"
        android:text="Records"
        android:textStyle="italic"
        android:textSize="@android:dimen/notification_large_icon_width"
        android:textColor="@color/secondary_text_disabled_material_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/record_list"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="fill_vertical"
        android:layout_alignParentTop="true"></ListView>

</LinearLayout>